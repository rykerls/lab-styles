    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">#4b2e83</item>
        <item name="android:colorPrimaryDark">#85754d</item>
        <item name="android:colorAccent">#e8e3d3</item>
        <item name="android:textColorPrimary">#85754d</item>
        <item name="android:textColor">#4b2e83</item>
    </style>

    <style name="TextStyle" >
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
